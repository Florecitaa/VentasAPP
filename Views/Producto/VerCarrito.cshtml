@model List<VentasAPP.Models.ItemCarrito>
@{
    ViewData["Title"] = "Carrito";
}

<h2>Carrito de Compras</h2>

<table class="table">
    <thead>
        <tr>
            <th>Producto</th>
            <th>Precio</th>
            <th>Cantidad</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Precio.ToString("C")</td>
                <td>@item.Cantidad</td>
                <td>@(item.Precio * item.Cantidad).ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

<h3>Total: @ViewBag.Total.ToString("C")</h3>

<form asp-action="ConfirmarCompra" asp-controller="Venta" method="post">
    <button type="submit" class="btn btn-success">Confirmar Compra</button>
</form>
